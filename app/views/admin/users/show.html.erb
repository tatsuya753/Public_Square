<div class="container">
  <div class="row">
    <div class="col-10 mx-auto">
      <h3 class="my-5 text-center"><%= @user.name %>さんの会員詳細</h3>
      <%= form_with model: @user, url: admin_user_path do |user| %>
        <table class="table">
          <tr>
            <th class="text-left">会員ID</th>
            <td><%= @user.id %></td>
          </tr>

          <tr>
            <th class="text-left">氏名</th>
            <td><%= @user.name %></td>
          </tr>

          <tr>
            <th class="text-left">メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
        </table>

        <div class="form-group col-11 d-flex justify-content-around">
          <%= user.submit '変更を保存', class: "btn btn-success", data: {confirm: "変更を保存しますか？"} %>
          <%= link_to "削除", admin_user_path(@user), method: :delete, class: "btn btn-danger text-light", data: {confirm: "ユーザーを削除しますか？"} %>
        </div>
      <% end %>
    </div>
  </div>
</div>