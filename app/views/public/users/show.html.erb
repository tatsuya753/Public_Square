<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <h1 class="my-5"><%= @user.name %>さんのプロフィール</h1>
    </div>

    <div class="col-12 text-center">
      <%= image_tag @user.get_profile_image(300, 300)%>
      <h3 class="my-5"><%= @user.name %></h3>
    </div>

    <div class="col-12 text-center border">
      <h5 class="my-2">自己紹介</h5>
      <p class="mt-4"><%= @user.introduction %></p>
    </div>

    <div class="col-12 text-center">
      <div class="row">
        <div class="col-lg-3 mt-3">
          <%= link_to follows_user_path(@user) do %>
            <h5>フォロー <%= @user.followers.count %></h5>
          <% end %>
        </div>

        <div class="col-lg-3 mt-3">
          <%= link_to followers_user_path(@user) do %>
            <h5>フォロワー <%= @user.followeds.count %></h5>
          <% end %>
        </div>

        <div class="col-lg-6 text-right mt-3">
          <% if current_user != @user %>
            <% if current_user.following?(@user) %>
              <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "col-6 btn btn-danger text-light" %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class:"col-6 btn btn-success text-light" %>
            <% end %>
          <% end %>


          <% if @user == current_user %>
            <%= link_to edit_user_path(current_user), class: 'col-6 btn btn-lg btn-success text-white' do %>
              <i class="fa-solid fa-user-gear">プロフィール編集</i>
            <% end %>
          <% end %>
        </div>

      </div>
    </div>

  </div>
</div>