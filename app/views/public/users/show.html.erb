<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <h1 class="my-5">マイページ</h1>
    </div>

    <div class="col-12 text-center">
      <%= image_tag @user.get_profile_image(300, 300)%>
      <h3 class="my-5"><%= @user.name %></h3>
    </div>

      <h6>フォロー</h6>
        <%= link_to follows_user_path(@user) do %>
          <h6><%= @user.followers.count %></h6>
        <% end %>

      <h6>フォロワー</h6>
        <%= link_to followers_user_path(@user) do %>
          <h6><%= @user.followeds.count %></h6>
        <% end %>

      <% if current_user != @user %>
        <% if current_user.following?(@user) %>
          <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-danger" %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class:"btn btn-success" %>
        <% end %>
      <% end %>

    <div class="col-12 text-center">
      <% if @user == current_user %>
        <%= link_to edit_user_path(current_user), class: 'col-4 btn btn-lg btn-success text-white' do %>
          <i class="fa-solid fa-user-gear">プロフィール編集</i>
        <% end %>
      <% end %>
    </div>

  </div>
</div>