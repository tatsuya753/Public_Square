<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <h2 class="my-5">Sign up</h2>

      <%= form_with model: @user, url: user_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field my-3">
          <%= f.label "name" %><br />
          <%= f.text_field :name, autofocus: true, class: "col-4" %>
        </div>

        <div class="field my-3">
          <%= f.label :email %><br />
          <%= f.email_field :email, utocomplete: "email", class: "col-4" %>
        </div>

        <div class="field my-3">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "col-4" %>
        </div>

        <div class="field my-3">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-4" %>
        </div>

        <div class="actions my-5">
          <%= f.submit "Sign up", class: "btn btn-success btn-lg col-3" %>
        </div>
      <% end %>

      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
